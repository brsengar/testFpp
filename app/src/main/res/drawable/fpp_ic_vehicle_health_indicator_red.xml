<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
            android:bottom="0dp"
            android:left="0dp"
            android:right="0dp"
            android:top="0dp">

        <shape android:shape="oval">
            <gradient
                    android:centerX="50%p"
                    android:centerY="50%p"
                    android:endColor="#8041495d"
                    android:gradientRadius="30%p"
                    android:startColor="#80FFFFFF"
                    android:type="radial" />
            <size
                    android:width="36dp"
                    android:height="36dp" />

        </shape>
    </item>
    <item android:gravity="center">
        <shape android:shape="oval" >
            <solid android:color="#FF00" />
            <size
                android:width="24dp"
                android:height="24dp" />
        </shape>
    </item>
</layer-list>
