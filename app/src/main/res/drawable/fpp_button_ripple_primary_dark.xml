<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/fpp_white">

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:angle="270"
                        android:endColor="@color/fpp_button_solid_gray"
                        android:startColor="@color/fpp_button_primary_gradient_top" />
                    <corners
                        android:bottomLeftRadius="8dp"
                        android:bottomRightRadius="8dp"
                        android:topLeftRadius="4dp"
                        android:topRightRadius="4dp" />
                </shape>
            </item>
            <item>
                <inset
                    android:insetLeft="0.5dp"
                    android:insetTop="1dp"
                    android:insetRight="0.5dp">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/fpp_button_primary_dark" />
                        <corners android:radius="4dp" />
                    </shape>
                </inset>
            </item>
        </layer-list>
    </item>

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/fpp_button_ripple_gray" />
            <corners android:radius="4dp" />
        </shape>
    </item>

</ripple>