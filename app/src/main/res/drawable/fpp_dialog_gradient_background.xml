<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="center">
        <inset
            android:insetLeft="28dp"
            android:insetRight="28dp">
            <shape android:shape="rectangle">
                <solid android:color="@color/fpp_slate_gray" />
                <corners android:radius="8dp" />
            </shape>
        </inset>
    </item>
    <item android:gravity="center">
        <inset android:insetTop="2dp">
            <shape android:shape="rectangle">
                <gradient
                    android:angle="225"
                    android:startColor="@color/fpp_mid_gray_for_gradient_charcoal"
                    android:endColor="@color/fpp_mid_gray_for_gradient_charcoal_light" />
                <corners android:radius="8dp" />
            </shape>
        </inset>
    </item>
</layer-list>
